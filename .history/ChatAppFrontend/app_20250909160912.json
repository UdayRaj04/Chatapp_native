{
  "expo": {
    "jsEngine": "jsc",
    "name": "Seamless Chat",
    "slug": "chat-app-frontend",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "plugins": [
      "expo-av"
    ],
    "android": {
      "newArchEnabled": false,
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.WAKE_LOCK",
        "android.permission.INTERNET",
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.MODIFY_AUDIO_SETTINGS",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.WAKE_LOCK"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.anonymous.chatappfrontend"
    },
    "ios": {
      "newArchEnabled": false,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Allow access to microphone for voice calls.",
        "NSCameraUsageDescription": "Allow access to camera for video calls.",
        "NSBluetoothAlwaysUsageDescription": "Allow Bluetooth for audio routing."
      },
      "supportsTablet": true
    },
    "web": {
      "favicon": "./assets/logos.png"
    }
  }
}
